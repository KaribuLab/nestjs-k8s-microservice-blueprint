{
  "templates": [
    {
      "rootDir": "helm",
      "delete": false,
      "files": [
        {
          "source": "helm/templates/deployment.yaml",
          "destination": "helm/templates/deployment.yaml"
        },
        {
          "source": "helm/templates/healtcheck-policy.yaml",
          "destination": "helm/templates/healtcheck-policy.yaml"
        },
        {
          "source": "helm/templates/horizontal-autoscaller.yaml",
          "destination": "helm/templates/horizontal-autoscaller.yaml"
        },
        {
          "source": "helm/templates/http-route.yaml",
          "destination": "helm/templates/http-route.yaml"
        },
        {
          "source": "helm/templates/service.yaml",
          "destination": "helm/templates/service.yaml"
        },
        {
          "source": "helm/templates/config.yaml",
          "destination": "helm/templates/config.yaml"
        },
        {
          "source": "helm/values.yaml",
          "destination": "helm/values.yaml"
        },
        {
          "source": "helm/Chart.yaml",
          "destination": "helm/Chart.yaml"
        }
      ]
    },
    {
      "rootDir": "src",
      "delete": false,
      "files": [
        {
          "source": "src/main.ts",
          "destination": "src/main.ts"
        },
        {
          "source": "src/app.module.ts",
          "destination": "src/app.module.ts"
        },
        {
          "source": "src/entrypoint.ts",
          "destination": "src/entrypoint.ts"
        },
        {
          "source": "src/health/health.module.ts",
          "destination": "src/health/health.module.ts"
        },
        {
          "source": "src/health/health.controller.ts",
          "destination": "src/health/health.controller.ts"
        }
      ]
    },
    {
      "rootDir": "./",
      "delete": false,
      "files": [
        {
          "source": "package.json",
          "destination": "package.json"
        },
        {
          "source": "pnpm-lock.yaml",
          "destination": "pnpm-lock.yaml"
        },
        {
          "source": "tsconfig.json",
          "destination": "tsconfig.json"
        },
        {
          "source": "tsconfig.build.json",
          "destination": "tsconfig.build.json"
        },
        {
          "source": ".prettierrc",
          "destination": ".prettierrc"
        },
        {
          "source": "eslint.config.mjs",
          "destination": "eslint.config.mjs"
        },
        {
          "source": ".dockerignore",
          "destination": ".dockerignore"
        },
        {
          "source": "Dockerfile",
          "destination": "Dockerfile"
        },
        {
          "source": "README.md",
          "destination": "README.md"
        }
      ]
    }
  ],
  "prompts": [
    {
      "name": "description",
      "description": "Project description",
      "type": "string"
    },
    {
      "name": "service_name",
      "description": "Service name",
      "type": "string"
    },
    {
      "name": "image_name",
      "description": "Image name",
      "type": "string"
    },
    {
      "name": "gateway_name",
      "description": "Image tag",
      "type": "string"
    },
    {
      "name": "service_account_name",
      "description": "Service account name",
      "type": "string"
    },
    {
      "name": "kubernetes_owner",
      "description": "Owner of the service",
      "type": "string"
    },
    {
      "name": "kubernetes_app",
      "description": "Application name",
      "type": "string"
    },
    {
      "name": "kubernetes_namespace",
      "description": "Kubernetes namespace",
      "type": "string"
    }
  ],
  "posthooks": [
    {
      "name": "Helm syntax check",
      "command": "helm template ."
    },
    {
      "name": "Install pnpm dependencies",
      "command": "pnpm install"
    },
    {
      "name": "Install NestJS microservices skill",
      "command": "pnpx skills add KaribuLab/skills -y --skill nestjs-microservices"
    },
    {
      "name": "Install Screaming Architecture skill",
      "command": "pnpx skills add KaribuLab/skills -y --skill screaming-architecture"
    },
    {
      "name": "Install Helm skill",
      "command": "pnpx skills add KaribuLab/skills -y --skill helm-charts"
    },
    {
      "name": "Install Owasp Security Check skill",
      "command": "pnpx skills add sergiodxa/agent-skills -y --skill owasp-security-check"
    }
  ]
}